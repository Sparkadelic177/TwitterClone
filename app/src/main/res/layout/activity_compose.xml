<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".composeActivity">

    <Button
        android:id="@+id/cancelBtn"
        android:layout_width="70dp"
        android:layout_height="34dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="350dp"
        android:layout_marginBottom="32dp"
        android:background="@color/white"
        android:text="X"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/etCompose"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etCompose"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="24dp"
        android:height="100dp"
        android:ems="10"
        android:hint="@string/hint"
        android:inputType="textMultiLine"
        android:minLines="5"
        app:layout_constraintBottom_toTopOf="@+id/tweetBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/tweetBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/SubmitBTN"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etCompose"
        android:textColor="@color/white"
        android:background="@color/blue"
        tools:text="Tweet" />

    <EditText
        android:id="@+id/tvAmount"
        android:layout_width="59dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:singleLine="true"
        app:layout_constraintEnd_toStartOf="@+id/tweetBtn"
        app:layout_constraintTop_toBottomOf="@+id/etCompose" />

</android.support.constraint.ConstraintLayout>